<table>
	<tr>
		<th>Questions</th>
		<th>Actions</th>
	</tr>

	<% @test_questions.each.with_index(1) do |body, index| %>
		<tr>
			<td><%= "#{index}. #{body}" %></td>
			<td>
				<%= link_to 'Show', test_question_path(@test, @test.questions.find_by_body(body)) %> |
				<%= link_to 'Edit', edit_test_question_path(@test, @test.questions.find_by_body(body)) %> |
				<%= render partial: 'shared/question_deleter',
									 locals: { test: @test, question: @test.questions.find_by_body(body) } %>
			</td>
		</tr>
	<% end %>
</table>

<p><%= link_to 'New question', new_test_question_path(@test) %></p>
<p><%= render 'shared/to_tests' %></p>