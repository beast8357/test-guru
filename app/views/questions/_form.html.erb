<h1><%= question_header(@test, @question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.text_field :body %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= render 'shared/to_tests' %> |
<%= render 'back' %>
<%= render 'shared/footer' %>