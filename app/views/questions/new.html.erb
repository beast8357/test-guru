<h1>Create question</h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <% if @question.errors.present? %>
    <div>
      <h2><%= pluralize(@question.errors.count, 'error') %> detected:</h2>

      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :question %>:<br>
    <%= form.text_field :body %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', test_path(@test) %>

<%= render 'shared/footer' %>