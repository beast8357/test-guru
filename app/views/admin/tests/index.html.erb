<div class="container">
  <h1 class="mt-3 mb-3 text-center"><%= t('.header') %></h1>

  <div class="table-responsive">
    <table class="table table-bordered border-dark">
      <thead>
        <tr class="text-center">
          <th><%= t('.title') %></th>
          <th><%= t('.level') %></th>
          <th><%= t('.questions') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>
      </thead>

      <tbody>
        <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <%= link_to icon('github', t('.show_gists')), admin_gists_path, class: "btn btn-primary mt-3" %>
</div>
