<div class="table-responsive">
  <table>
    <p class="mt-3">
      <strong><%= t('.category') %>:</strong>
      <%= @test.category.title %>
    </p>

    <p>
      <strong><%= t('.title') %>:</strong>
      <%= @test.title %>
    </p>

    <p>
      <strong><%= t('.level') %>:</strong>
      <%= test_level(@test) %>
    </p>
  </table>

  <table class="table table-bordered border-dark">
    <tr>
      <th class="text-center"><%= t('.questions') %></th>
      <th class="text-center" colspan="3"><%= t('.actions') %></th>
    </tr>

    <%= render @test.questions %>
  </table>
</div>

<div class="text-center">
  <%= link_to t('.new_question'), new_admin_test_question_path(@test), class: "btn btn-primary" %>
  <%= link_to t('.back'), admin_tests_path, class: "btn btn-primary" %>
</div>
