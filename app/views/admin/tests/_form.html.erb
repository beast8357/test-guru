<div class="row justify-content-center">
  <div class="col col-md-2">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title, required: true, placeholder: true %>
      </div>

      <div>
        <%= form.label :level %><br>
        <%= form.number_field :level, required: true %>
      </div>

      <div>
        <%= form.label :category_id %><br>
        <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
      </div>

      <p class="mt-2 mb-2">
        <%= form.submit %>
      </p>

      <p>
        <%= link_to t('.back'), admin_tests_path, class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
