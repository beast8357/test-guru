<tr class="text-center">
  <td class="align-middle"><%= question.body %></td>
  <td class="align-middle">
    <%= link_to t('.show'),
                admin_test_question_path(question.test, question),
                class: "btn btn-primary" %>
  </td>
  <td class="align-middle">
    <%= link_to t('.edit'),
                edit_admin_test_question_path(question.test, question),
                class: "btn btn-primary" %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete'),
                admin_test_question_path(question.test, question),
                method: :delete,
                data:   { confirm: 'Are you sure?' },
                class: "btn btn-primary" %>
  </td>
</tr>
