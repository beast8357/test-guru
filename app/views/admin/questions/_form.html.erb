<h1><%= question_header(current_test, @question) %></h1>

<%= form_with model: [:admin, current_test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.text_field :body %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'To Tests', admin_tests_path %> |
<%= link_to 'Back', admin_test_path(current_test) %>
