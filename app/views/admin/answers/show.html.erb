<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col col-md-6">
      <h1><%= t('.question') %></h1>

      <h2><%= @answer.question.body %></h2>

      <h3>
        <b><%= t('.answer') %></b>
        <%= @answer.body %>
      </h3>

      <h3>
        <b><%= t('.correct') %></b>
        <%= @answer.correct %>
      </h3>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <%= link_to t('.to_tests'), admin_tests_path, class: "btn btn-primary" %>
  <%= link_to t('.back'), admin_test_question_path(current_test, current_question), class: "btn btn-primary" %>
</div>
