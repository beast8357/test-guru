<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

      <div class="card border-dark">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <p>
                <%= f.label :email, t('.email') %><br />
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('.enter_email') %>
              </p>

              <p>
                <%= f.label :password, t('.password') %><br />
                <%= f.password_field :password, class: "form-control", placeholder: t('.enter_password') %>
              </p>

              <p>
                <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                    <%= f.label :remember_me, class: "form-check-label" do %>
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <%= t('.remember_me') %>
                    <% end %>
                  </div>
                <% end %>
              </p>

              <%= f.submit t('.button'), class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>

    <div class="mt-2 mb-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
