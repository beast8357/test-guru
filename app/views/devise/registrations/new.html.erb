<div class="row justify-content-center mt-5">
  <div class="col col-md-3">
    <h2><%= t('.header') %></h2>

    <div class="card border-dark">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <p>
                <%= f.label :first_name, t('.first_name') %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </p>
            </div>

            <p>
              <%= f.label :last_name, t('.last_name') %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </p>

            <p>
              <%= f.label :email, t('.email') %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </p>

            <p>
              <%= f.label :password, t('.password') %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </p>

            <p>
              <%= f.label :password_confirmation, t('.password_confirmation') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <%= octicon 'check', class: 'text-success hide' %>
              <%= octicon 'alert', class: 'text-danger hide' %>
            </p>

            <%= f.submit t('.button'), class: "btn btn-dark" %>
          <% end %>
        </div>
      </div>

    <div class="mt-2 mb-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
